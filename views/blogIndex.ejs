<div class="blogscontainer">
      
    <!--  blog start -->
    <% blogs.forEach(function(blog){ %>
     <div class="blogbox">
        
        
            <img src="<%= blog.image %>" alt="text pic" border="0"></<img> <br>
            <a href="/blogs/<%= blog._id %>"> <h2> <%=blog.title%> </h2> </a>
         <div class="snippet"><%- blog.body.substring(0, 100) %>...
        </div>
        <div class="continue"><a href="/blogs/<%= blog._id %>">Read more>></a></div>
        
         
     </div>
     <% }) %> 
    <!--  blog end-->

  
  </div>
